
extends layoutAdmin

block content
  style.
    .parent:before {
            font-family: "Font Awesome\ 5 Free";
            content: "\f65e";
            padding: 8px;
            font-style: normal;
     }
     .children:before {
              font-family: "Font Awesome\ 5 Free";
              content: "\f1c9";
              padding: 8px;
              font-style: normal;
     }
    li.has-child > .tree-content {
         background: #e2e2e2;
         font-weight: bolder;
         box-shadow: 0px 2px 4px 0px #9a9a9a;
     }
  div#appList
    input#filter.form-control( type="text" placeholder="Type to filter..." v-model="treeFilter0" class="filter-field")
    tree(:data="treeData",:options="treeOptions",  @node:selected="onNodeSelected", :filter="treeFilter0",style='width: 500px;background: rgb(243, 243, 243);margin: 10px;')
       span.tree-text(slot-scope='{ node }')
          template(v-if='!node.data.icon')
            | {{ node.text }}
          template(v-else='')
             i(:class='node.data.icon')
             | {{ node.text }}


