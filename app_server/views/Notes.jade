block content
  style.
    .cardHeigth{
      height: 200px;
      overflow-y: scroll;
    }
     ::-webkit-scrollbar {
      width: 5px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
      background: #f1f1f1; 
    }
    
    /* Handle */
    ::-webkit-scrollbar-thumb {
      background: #4e73dfba; 
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
      background: #4e73dfba; 
    } 
        
  
